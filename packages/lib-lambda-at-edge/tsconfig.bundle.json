{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "lib": [
      "DOM",
      "ES2019"
    ],
    "target": "ES2019",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": false,
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/default-handler.ts",
    "./src/default-handler-v2.ts",
    "./src/api-handler.ts",
    "./src/image-handler.ts",
    "./src/regeneration-handler.ts",
    "./src/regeneration-handler-v2.ts"
  ]
}
